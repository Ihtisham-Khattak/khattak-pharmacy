# PharmaSpot Environment Configuration
# Copy this file to .env and customize for your deployment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
APP_NAME=PharmaSpot
APP_VERSION=1.5.1

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# PORT=0 means auto-assign (recommended for Electron)
PORT=0
HOST=localhost
SERVER_TIMEOUT=30000

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Higher = more secure but slower (10-12 recommended)
BCRYPT_ROUNDS=12

# Session expiration in hours
SESSION_EXPIRY_HOURS=8

# Account lockout after failed login attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Password requirements
PASSWORD_MIN_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# ===========================================
# RATE LIMITING
# ===========================================
# Login rate limiting (prevent brute force)
LOGIN_RATE_WINDOW=900000
LOGIN_RATE_MAX=5

# API rate limiting
API_RATE_WINDOW=900000
API_RATE_MAX=100

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Leave DB_PATH empty to use default app data location
# DB_PATH=/path/to/your/database.db
DB_ENABLE_WAL=true
DB_ENABLE_FOREIGN_KEYS=true

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=uploads

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
# LOG_PATH=/path/to/logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ===========================================
# UPDATE SERVER
# ===========================================
UPDATE_SERVER=https://download.pharmaspot.patternsdigital.com

# ===========================================
# COPYRIGHT
# ===========================================
COPYRIGHT_YEAR=2022
